<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.CriarUtilizadorController">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <Label text="Criar Utilizador">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>

      <TextField fx:id="txtNome" promptText="Nome" />
      <TextField fx:id="txtEmail" promptText="Email" />
      <PasswordField fx:id="txtPassword" promptText="Password" />

      <ComboBox fx:id="cmbTipo" promptText="Tipo" />

      <Button text="Criar" onAction="#onCriar" />
      <Button text="Cancelar" onAction="#onCancelar" />
   </children>

</VBox>
