<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.EventosController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Lista de Eventos">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
     <TableView fx:id="eventosTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="tituloCol" prefWidth="116.0" text="Titulo" />
            <TableColumn fx:id="dataCol" prefWidth="104.800048828125" text="Data" />
            <TableColumn fx:id="estadoCol" prefWidth="96.79998779296875" text="Estado" />
            <TableColumn fx:id="lotacaoCol" prefWidth="82.39996337890625" text="Lotação" />
            <TableColumn fx:id="participantesCol" minWidth="9.60003662109375" prefWidth="86.39996337890625" text="Inscritos" />
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#onRefresh" text="Atualizar">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
   </children>
</VBox>
